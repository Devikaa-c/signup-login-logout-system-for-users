<%- include('../layouts/header.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  
<body>
  <section class="d-flex flex-column w-100 vh-100 bg-dark justify-content-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4 center-block">
          <div class="card bg-black border-0 rounded-3 shadow-sm shadow-lg">
            <div class="card-body p-0">
              <div class="text-center bg-primary py-3 pt-4 mb-3 rounded-top-2">
                <h3 class="fs-3 fw-normal">Administration</h3>
              </div>
              <div class="row py-1 px-md-4 px-xl-5">
                <div class="col-12">
                  <form method="post" class="mx-1" action="/admin">
                    <div class="mb-3">
                      <label class="text-light mb-2" for="username">Username</label>
                      <input type="text" class="form-control py-3 bg-black border-dark text-light" name="username" required />
                    </div>
                    <div class="mb-3">
                      <label class="text-light mb-2" for="password">Password</label>
                      <input type="password" class="form-control py-3 text-light bg-black border-dark" name="password" required />
                    </div>
                    <div class="text-center pt-3">
                      <button type="submit" class="btn btn-primary w-100 py-3 mb-5 rounded-3 text-black text-center">Login</button>
                    </div>

                    <div class="text-center">

                     <% if(locals.passwordError) {%>

                     <span class="text-danger"><%= passwordError %></span>

                     <% } %>

                    </div>

                    <div class="text-center">

                     <% if(locals.unauthError) {%>

                     <span class="text-danger"><%= unauthError %></span>

                     <% } %>

                    </div>

              
                  
                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  


<%- include('../layouts/footer.ejs') %>