<%- include('../layouts/header.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
 

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;800&display=swap');
      body {
          font-family: 'Poppins', sans-serif;
          background-color: #f4f4f4;
          margin: 0;
          padding: 0;
      }
  
      h1 {
          text-align: center;
          color: #333;
          margin-top: 50px;
      }
  
     
  
      input {
          width: 100%;
          padding: 10px;
          margin-bottom: 15px;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
      }
  
      input[type="submit"] {
          background-color: #0065b8;
          color: #fff;
          cursor: pointer;
      }
  
      input[type="submit"]:hover {
          background-color: #1f77c0;
      }
  
      p {
          text-align: center;
          color: #0065b8;
          margin-top: 20px;
      }
      a {
      
      margin: 50px 470px;
      padding: 10px;
      background-color: #0065b8;
      color: #fff;
      text-decoration: none;
      text-align: center;
      border-radius: 4px;
  }
</style>

<h1>Edit User Details</h1>

<div class="text-center">

<% if(locals.updateFailed) {%>

<span class="text-danger"><%= updateFailed %></span>

<% } %>

</div>

<div class="container px-5">
   <div class="container px-5">
   
    <form action="/admin/editUser" method="post" enctype="application/x-www-form-urlencoded">
        <input type="text" name="firstname" placeholder="First Name"  pattern="^\S.*$" value="<%= user.first_name %>" required>
        <br><br> 
        <input type="text" name="lastname" placeholder="Last Name" pattern="^\S.*$" value="<%= user.last_name %>" required> 
        <br><br>
        <input type="email" name="email" placeholder="Email" pattern=".+@gmail\.com" value="<%= user.email %>" required>
        <br><br>
        <input type="text" name="username" placeholder="Username"  pattern="^\S.*$" value="<%= user.username %>"  required >
        <br><br>
        <input type="password" name="password" placeholder="Password" >
        <br><br>
        <input type="submit" value="Update User">  
        <input type="hidden" name="id" value="<%= user._id %>">                                                 
      </form> 

   </div>
</div>


<a href="/admin/dashboard">Go back to dashboard</a>




