<%- include('../layouts/header.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;800&display=swap');
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
    
        h1 {
            text-align: center;
            color: #333;
            margin-top: 50px;
        }
    
        form {
            width: 50%;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    
        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
    
        input[type="submit"] {
            background-color: #0065b8;
            color: #fff;
            cursor: pointer;
        }
    
        input[type="submit"]:hover {
            background-color: #1f77c0;
        }
    
        p {
            text-align: center;
            color: #0065b8;
            margin-top: 20px;
        }
        a {
        
        margin: 10px 40px;
        padding: 10px;
        background-color: #0065b8;
        color: #fff;
        text-decoration: none;
        text-align: center;
        border-radius: 4px;
    }
</style>
    

<h1>Add new User </h1>

<div class="container d-flex justify-content-end"><a href="/admin/dashboard">Go back to dashboard</a></div>


<div class="text-center">

    <% if(locals.addFail) {%>

    <span class="text-danger"><%= addFail %></span>

    <% } %>

   </div>
   
<div class="text-center">

    <% if(locals.totalError) {%>

    <span class="text-danger"><%= totalError %></span>

    <% } %>

   </div>

<form action="/admin/addUser" method="post" enctype="application/x-www-form-urlencoded">
    <input type="text" name="first_name" placeholder="Enter the first name , eg:Sam" pattern="^\S.*$" required>
    <br><br>
    <input type="text" name="last_name" placeholder="Enter the last name , eg:Smith" pattern="^\S.*$" required>
    <br><br>
    <input type="email" name="email" placeholder="Enter the email address , eg:samsmith@gmail.com" pattern=".+@gmail\.com" required>
    <br><br>
    <input type="text" name="username" placeholder="Enter the username , eg:samsmith" pattern="^\S.*$" required>
    <br><br>
    <input type="password" name="password" placeholder="Enter the password" required>
    <br><br>
    <input type="submit" value="Add User">                                                   
</form> 




<%- include('../layouts/footer.ejs') %>