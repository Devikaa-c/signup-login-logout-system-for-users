<%- include('../layouts/header.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

<section class="d-flex flex-column w-100 vh-100 justify-content-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10 col-sm-10 col-md-10 col-lg-8 col-xl-6 col-xxl-6 center-block">
        <div class="card border border-warning-subtle rounded-4 shadow-sm shadow-lg">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <h1 class="fs-2 fw-medium text-black text-center">Sign Up</h1>
            <br>

            <div class="text-center">

              <% if(locals.existError) {%>
          
              <span class="text-danger"><%= existError %></span>
          
              <% } %>
          
             </div>

            <div class="text-center">

              <% if(locals.signupError) {%>
          
              <span class="text-danger"><%= signupError %></span>
          
              <% } %>
          
             </div>
            <div class="text-center">

              <% if(locals.nameerror) {%>
          
              <span class="text-danger"><%= nameerror %></span>
          
              <% } %>
          
             </div>
            <div class="row py-1">
              <div class="col-12">
                <form method="post" action="/register">
                  <div class="mb-3 d-flex justfy-content-between">
               
                    <input placeholder="Enter the first name , eg:Sam" type="text" class="form-control py-3 mr-1 border-danger-subtle rounded-pill" name="first_name" pattern="^\S.*$" required />
                    <input placeholder="Enter the last name , eg:Smith" type="text" class="form-control py-3 ms-1 border-danger-subtle rounded-pill" name="last_name" pattern="^\S.*$" required />
                  </div>
                  <div class="mb-3">
                    <input placeholder="Enter the email address , eg:samsmith@gmail.com" type="email" class="form-control py-3 border-danger-subtle rounded-pill"  name="email" pattern=".+@gmail\.com" required />
                  </div>
                  <div class="mb-3">
                    <input placeholder="Enter the username , eg:samsmith" type="text" class="form-control py-3 border-danger-subtle rounded-pill" name="username" pattern="^\S.*$" required />
                  </div>
                  <div class="mb-3">
                    <input placeholder="Enter Your Password" type="password" class="form-control py-3 border-danger-subtle rounded-pill" name="password" required />
                  </div>
                  <div class="text-center pt-3">
                      <div class="alert py-0 text-center" role="alert">
                      </div>
                    <button type="submit" class="btn btn-danger w-100 py-3 rounded-pill text-center" >Register</button>
                  </div>
                  <h2 class="fs-6 fw-normal text-center text-dark pt-4">Already have an account?<a class="link-offset-2 link-underline link-underline-opacity-0" href="/">Login Now</a></h2>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer.ejs') %>




